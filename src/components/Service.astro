---
export interface serviceData {
  name?: string;
  secondaryService?: string;
  price?: string;
  secondaryPrice?: string;
  description?: string;
  duration?: string;
  secondaryDuration?: string;
}

const { serviceData } = Astro.props;
---

<div
  class="flex flex-col gap-2 mb-8 shadow shadow-skinShadow/40 px-4 py-6 border border-[rgba(0,0,0,0.2)] bg-[rgba(255,255,255,.2)]"
>
  <div class="flex gap-4 flex-col justify-between items-center">
    <div class="row justify-between flex w-full">
      <h3 class="font-bold">{serviceData.name}</h3>
      <div class="details flex flex-col">
        <p class="text-sm italic">{serviceData.price}</p>
        <p class="self-end text-xs italic">{serviceData.duration} minutes</p>
      </div>
    </div>
    {
      serviceData.secondaryService ? (
        <div class="row justify-between  flex w-full">
          <h3 class="font-bold">{serviceData.secondaryService}</h3>
          <div class="details flex flex-col">
            <p class="text-sm italic">{serviceData.secondaryPrice}</p>
            <p class="self-end text-xs italic">
              {serviceData.secondaryDuration} minutes
            </p>
          </div>
        </div>
      ) : null
    }
  </div>
  <p>{serviceData.description}</p>
</div>
